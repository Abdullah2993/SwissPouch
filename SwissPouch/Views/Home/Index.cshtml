@using System.Reflection;
@using SwissPouch.Attributes;
@using SwissPouch.Controllers;

@foreach (var type in Assembly.GetAssembly(typeof (UtilitiesController)).GetTypes())
{
    if (type.IsClass)
    {
        foreach (var methodInfo in type.GetMethods())
        {
            foreach (var customAttribute in Attribute.GetCustomAttributes(methodInfo))
            {
                if (customAttribute is Owsv)
                {
                    var attr = customAttribute as Owsv;
                    @:<@nameof(Owsv) params="title: '@attr.Title', buttonLabel: '@attr.ButtonLabel', link: '@attr.Link' ,method: '@attr.Method'"></@nameof(Owsv)>
                }
                else if (customAttribute is Twsv)
                {
                    @:<@nameof(Twsv)></@nameof(Twsv)>
                }
            }

        }
    }
}
